- model_class = Schedule
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:reservation_id) + ':'
  %br
  = @schedule.reservation_id
%p
  %strong= model_class.human_attribute_name(:schedule_type) + ':'
  %br
  = @schedule.schedule_type
%p
  %strong= model_class.human_attribute_name(:note) + ':'
  %br
  = @schedule.note
%p
  %strong= model_class.human_attribute_name(:started_on) + ':'
  %br
  = @schedule.started_on
%p
  %strong= model_class.human_attribute_name(:finished_on) + ':'
  %br
  = @schedule.finished_on


= link_to t('.back', :default => t("helpers.links.back")), schedules_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_schedule_path(@schedule), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), schedule_path(@schedule), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
