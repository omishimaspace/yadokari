- model_class = Reservation
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:yado_id) + ':'
  %br
  = @reservation.yado_id
%p
  %strong= model_class.human_attribute_name(:room_id) + ':'
  %br
  = @reservation.room_id
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @reservation.name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @reservation.email
%p
  %strong= model_class.human_attribute_name(:tel) + ':'
  %br
  = @reservation.tel
%p
  %strong= model_class.human_attribute_name(:check_in_on) + ':'
  %br
  = @reservation.check_in_on
%p
  %strong= model_class.human_attribute_name(:check_out_on) + ':'
  %br
  = @reservation.check_out_on
%p
  %strong= model_class.human_attribute_name(:check_in_time) + ':'
  %br
  = @reservation.check_in_time
%p
  %strong= model_class.human_attribute_name(:men_number) + ':'
  %br
  = @reservation.men_number
%p
  %strong= model_class.human_attribute_name(:women_number) + ':'
  %br
  = @reservation.women_number
%p
  %strong= model_class.human_attribute_name(:purpose_of_use) + ':'
  %br
  = @reservation.purpose_of_use
%p
  %strong= model_class.human_attribute_name(:payment_method) + ':'
  %br
  = @reservation.payment_method
%p
  %strong= model_class.human_attribute_name(:coupon) + ':'
  %br
  = @reservation.coupon
%p
  %strong= model_class.human_attribute_name(:note) + ':'
  %br
  = @reservation.note
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @reservation.status
%p
  %strong= model_class.human_attribute_name(:token) + ':'
  %br
  = @reservation.token


= link_to t('.back', :default => t("helpers.links.back")), reservations_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_reservation_path(@reservation), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), reservation_path(@reservation), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
